// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Contact {
  id       Int     @id @default(autoincrement())
  forename String?
  surname  String?
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String?
  profile   Profile?
  joinedTeams Team[] @relation("TeamMembers")
  invitedBy   Invitation[] @relation("UserIsInvitedByUser")
  inviting    Invitation[] @relation("UserIsInvitingUser")
}

model Invitation {
  id          Int       @id @default(autoincrement())
  sender      User      @relation("UserIsInvitedByUser", fields: [senderId], references: [id])
  senderId    Int
  receiver    User      @relation("UserIsInvitingUser", fields: [receiverId], references: [id])
  receiverId  Int
  team        Team      @relation("UserInviteToTeam", fields: [teamId], references: [id])
  teamId      Int
  date        DateTime  @default(now())
  status      String    @default("PENDING")
}

model Team {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  tag     Tag?  @relation(fields: [tagId], references: [id])
  tagId   Int?
  owner   User? @relation(fields: [ownerId], references: [id])
  ownerId Int?
  members User[] @relation("TeamMembers")
  invitation  Invitation[] @relation("UserInviteToTeam")
  tournaments      Tournament[]     @relation("TeamParticipateToTournaments")
}

model Tag {
  id      Int     @id @default(autoincrement())
  name    String  @unique
}

model Profile {
  id            Int         @id @default(autoincrement())
  firstname     String?
  lastname      String?
  username      String?
  user          User        @relation(fields: [userId], references: [id])
  userId        Int
  currency      Currency?   @relation(fields: [currencyId], references: [id])
  currencyId    Int?
  language      Language?   @relation(fields: [languageId], references: [id])
  languageId    Int?
}

model Currency {
  id      Int     @id @default(autoincrement())
  code    String  @unique
  label   String  @unique
  profiles Profile[]
  deleted Boolean @default(false)
}

model Language {
  id      Int     @id @default(autoincrement())
  code    String  @unique
  label   String  @unique
  profiles Profile[]
  deleted Boolean @default(false)
}

model Platform {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  logo    String?
  games   Game[]
  deleted Boolean @default(false)
}

model Tournament {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  date       DateTime
  tournamentType       TournamentType @relation(fields: [tournamentTypeId], references: [id])
  tournamentTypeId     Int
  rule       Rule       @relation(fields: [ruleId], references: [id])
  ruleId     Int
  format     Format     @relation(fields: [formatId], references: [id])
  formatId   Int
  teams      Team[]     @relation("TeamParticipateToTournaments")
}

model TournamentType {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  reward       TournamentReward? @relation(fields: [rewardId], references: [id])
  rewardId     Int?
}

model TournamentReward {
  id                Int           @id @default(autoincrement())
  name              String        @unique
  tournamentType    TournamentType[]
}

model Rule {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  tournaments Tournament[]
  statements  Statement[]
}

model Statement {
  id          Int           @id @default(autoincrement())
  name        String
  content     String
  rule        Rule?          @relation(fields: [ruleId], references: [id])
  ruleId      Int?
}

model Format {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  tournaments Tournament[]
}

model Game {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  coverImage String?
  platforms  Platform[]
  deleted    Boolean    @default(false)
}

model Politic {
  id      Int     @id @default(autoincrement())
  name    String
  content String?
  deleted Boolean @default(false)
}

model Blog {
  id      Int     @id @default(autoincrement())
  name    String
  content String?
  cover String?
  video String?
  isRemoved Boolean @default(false)
}
