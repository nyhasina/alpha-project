// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Contact {
  id       Int     @id @default(autoincrement())
  forename String?
  surname  String?
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String?
  profile   Profile?
}

model Profile {
  id            Int         @id @default(autoincrement())
  firstname     String?
  lastname      String?
  username      String?
  user          User        @relation(fields: [userId], references: [id])
  userId        Int
  currency      Currency?   @relation(fields: [currencyId], references: [id])
  currencyId    Int?
  language      Language?   @relation(fields: [languageId], references: [id])
  languageId    Int?
}

model Currency {
  id      Int     @id @default(autoincrement())
  code    String
  label   String
  profiles Profile[]
  deleted Boolean @default(false)
}

model Language {
  id      Int     @id @default(autoincrement())
  code    String
  label   String
  profiles Profile[]
  deleted Boolean @default(false)
}

model Platform {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  logo    String?
  games   Game[]
  deleted Boolean @default(false)
}

model Game {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  coverImage String?
  platforms  Platform[]
  deleted    Boolean    @default(false)
}

model Politic {
  id      Int     @id @default(autoincrement())
  name    String
  content String?
  deleted Boolean @default(false)
}

