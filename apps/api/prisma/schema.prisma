// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Contact {
  id       Int     @id @default(autoincrement())
  forename String?
  surname  String?
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String?
}

model Platform {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  logo    String?
  games   Game[]
  deleted Boolean @default(false)
}

model Game {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  coverImage String?
  platforms  Platform[]
  deleted    Boolean    @default(false)
}

model Politic {
  id      Int     @id @default(autoincrement())
  name    String
  content String?
  deleted Boolean @default(false)
}
model Blog {
  id      Int     @id @default(autoincrement())
  name    String
  content String?
  cover String?
  video String?
  isRemoved Boolean @default(false)
}